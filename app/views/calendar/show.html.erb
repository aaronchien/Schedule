<div class="row">
  <div class="col-md-12 text-center">
    <div class="well controls">
      <%= link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-backward"></i>
      <% end %>
      <%= "#{@date.strftime("%B")} #{@date.year}" %>
      <%= link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-forward"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= calendar @date do |date| %>
      <%= date.day %>
      <% if @events.where(date: date) %>
        <ul>
          <% @events.where(date: date).each do |event| %>
            <li><%= link_to event.name, event %></li>
          <% end %>
        </ul>
      <% end %>  
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to "Add new event!", addevent_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>